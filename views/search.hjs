<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Flipp.er</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="main.css">
</head>

<body>
    {{!-- SIDENAV START --}}
    <ul id="slide-out" class="sidenav">
        <li>
            {{#user}}
            <div class="user-view">
                <div class="background">
                    <img src="{{backImg}}">
                </div>
                <a href="/profile">
                    <img class="circle" src="{{profileImg}}">
                </a>
                <a href="/profile">
                    <span class="white-text name">{{first_name}} {{last_name}}</span>
                </a>
                <a href="mailto:{{email}}">
                    <span class="white-text email">{{email}}</span>
                </a>
            </div>
            {{/user}}
        </li>
        <li>
            <a href="/profile">
                <i class="material-icons">account_circle</i>Profile</a>
        </li>
        <li>
            <a href="/follows">
                <i class="material-icons">thumb_up</i>Follows</a>
        </li>
        <li>
            <a href="/favorite">
                <i class="material-icons">favorite</i>Favorite</a>
        </li>
        <li>
            <a href="/search">
                <i class="material-icons">search</i>Search People</a>
        </li>
        <li>
            <a href="/logout">
                <i class="material-icons">exit_to_app</i>Log Out</a>
        </li>

        </li>
    </ul>
    {{!-- SIDENAV END --}} {{!-- NAVBAR START --}}
    <div class="navbar-fixed">
        <nav>
            <div class="nav-wrapper blue ">
                <a href="#" data-target="slide-out" class="sidenav-trigger">
                    <i class="material-icons">menu</i>
                </a>
                <a href="/" class="brand-logo center">Flipp.er</a>
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li>
                        <a href="/profile">Profile</a>
                    </li>
                    <li>
                        <a href="/info">Info</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    {{!-- NAVBAR END --}}
    <div class="container">
        {{!-- SEARCH START --}}
        <div class="row">
            <div class="col s12 z-depth-2" style="padding: 20px; margin-top: 50px;">
                <h5>Search by email</h5>
                <form action="/searchPerson" method="POST">
                    <div class="input-field">
                        <label for="query">Search...</label>
                        <input type="email" id="query" name="query">
                    </div>
                    <input type="submit" class="btn blue">
                </form>
            </div>
        </div>

        {{!-- SEARCH END --}}
    </div>

    <script src="./script.js"></script>
</body>

</html>